$base-font-family = "PingFang SC", "微软雅黑";
//--重置

* {
  box-sizing border-box
  -ms-box-sizing border-box
}

html, body, h1, h2, h3, h4, h5, h6, hr, p, blockquote, dl, dt, dd, ul, li, pre, fieldset, legend, button, input, textarea, form, th, td, button {
  margin 0;
  padding 0;
  font-family $base-font-family;
  font-weight 400;
}

html, body {
  width 100%
  height 100%
}

body {
  background-color $bg-color
  color $color
  font-size .24rem
}

ul, ol {
  list-style none
  margin 0
  padding 0
}

pre {
  white-space normal
}

a {
  cursor pointer
  text-decoration none
}

input, textarea, button {
  outline none
}

button {
  background-color transparent
  border none
}

h1 {
  font-size .46rem
}

h2 {
  font-size .38rem
}

h3 {
  font-size .32rem
}

h4 {
  font-size .28rem
}

h5 {
  font-size .24rem
}

h6 {
  font-size .2rem
}

// 隐藏滚动条
::-webkit-scrollbar,
::-webkit-scrollbar-button,
::-webkit-scrollbar-track,
::-webkit-scrollbar-track-piece,
::-webkit-scrollbar-thumb,
::-webkit-scrollbar-corner,
::-webkit-resizer {
  display none
}

.hide {
  display none!important
}